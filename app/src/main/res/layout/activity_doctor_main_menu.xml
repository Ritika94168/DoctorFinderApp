<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:padding="10sp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:text="Main Menu"
                android:id="@+id/adminmenu"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="1"
                            android:id="@+id/todayavailability"
                            android:orientation="vertical"
                            android:background="@drawable/button"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="5sp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:background="@drawable/button"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:text="Today's Availability"
                                android:textColor="#000000"
                                android:layout_marginTop="35dp"
                                android:textSize="15sp"
                           />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="1"
                            android:id="@+id/managepatients"
                            android:orientation="vertical"
                            android:background="@drawable/button"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="5sp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:background="@drawable/button"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="35dp"
                                android:textStyle="bold"
                                android:text="Manage Patients"
                                android:textColor="#000000"
                                android:textSize="15sp"
                               />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:id="@+id/editDetails"
                            android:background="@drawable/button"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="5sp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:background="@drawable/button"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginTop="35dp"
                                android:text="Edit Details"
                                android:textColor="#000000"
                                android:textSize="15sp"
                             />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="1"
                            android:id="@+id/recentPayments"
                            android:orientation="vertical"
                            android:background="@drawable/button"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="5sp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:background="@drawable/button"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:layout_marginTop="35dp"
                                android:text="Recent Payments"
                                android:textColor="#000000"
                                android:textSize="15sp"
                               />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="1"
                            android:id="@+id/smsmodule"
                            android:orientation="vertical"
                            android:background="@drawable/button"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="5sp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:background="@drawable/button"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:layout_marginTop="35dp"
                                android:text="SMS Module"
                                android:textColor="#000000"
                                android:textSize="15sp"
                               />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_weight="1"
                            android:id="@+id/logout"
                            android:orientation="vertical"
                            android:background="@drawable/button"
                            android:layout_marginBottom="10sp"
                            android:layout_marginLeft="5sp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="35dp"
                                android:text="Logout"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                 />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </LinearLayout>



</RelativeLayout>
