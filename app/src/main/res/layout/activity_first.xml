<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5sp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:id="@+id/lin1"
        android:layout_marginRight="5sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:text="Select An Option"
            android:id="@+id/adminmenu"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90sp"
            android:layout_marginTop="25sp"
            android:layout_marginRight="5sp"
            android:layout_below="@+id/adminmenu"
            android:id="@+id/patientLogin"
            android:orientation="vertical"
            android:background="@drawable/re_button"
            android:layout_marginBottom="40sp"
            android:layout_marginLeft="5sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:id="@+id/user"
                android:text="Track Your Doctors"
                android:textColor="#ffffff"
                android:textSize="20sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="5sp"
            android:orientation="vertical"
            android:id="@+id/doctorlogin"
            android:background="@drawable/re_button"
            android:layout_below="@+id/patientLogin"
            android:layout_marginBottom="25sp"
            android:layout_marginLeft="5sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Doctor Module"
                android:id="@+id/admin"
                android:textColor="#ffffff"
                android:textSize="20sp"
                />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>