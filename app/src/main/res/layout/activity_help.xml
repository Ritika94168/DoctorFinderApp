<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HelpActivity">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="15sp"
        android:text="Contact Us"
        android:textAlignment="center"
        android:textColor="#0000ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_margin="10sp"
        android:text="Please free to ask any type of query via this mobile number or by email.This mobile number is also on WhatsApp"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Contact Number:-"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="7988327513"
            android:textAlignment="center"
            android:textColor="#0000ff"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="E-mail Id:-"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="anshulgupta2498@gmail.com"
            android:textAlignment="center"
            android:textColor="#0000ff"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/whatsapp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/lin3"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="#008577"
        android:drawableLeft="@drawable/whatsapp"
        android:padding="2sp"
        android:text="WhatsApp Us!!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/whatsapp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="#008577"
        android:drawableLeft="@drawable/back"
        android:padding="2sp"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:text="Tap On Number and Email Directly "
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>